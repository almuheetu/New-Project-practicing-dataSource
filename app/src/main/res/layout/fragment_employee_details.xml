<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_card"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/employee_profile_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/employee_profile_image"
                android:scaleType="centerCrop"
                tools:src="@drawable/employee_profile_image" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_employee_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_card"
            tools:text="John Doe" />

        <TextView
            android:id="@+id/tv_employee_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_employee_name"
            app:layout_constraintStart_toStartOf="@+id/tv_employee_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_employee_name"
            tools:text="985903948" />

        <TextView
            android:id="@+id/tv_employee_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_employee_name"
            app:layout_constraintStart_toStartOf="@+id/tv_employee_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_employee_id"
            tools:text="Software Engineer" />

        <TextView
            android:id="@+id/tv_employee_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_employee_name"
            app:layout_constraintStart_toStartOf="@+id/tv_employee_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_employee_title"
            tools:text="john@gmail.com" />

        <TextView
            android:id="@+id/tv_employee_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_employee_name"
            app:layout_constraintStart_toStartOf="@+id/tv_employee_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_employee_email"
            tools:text="50000" />

        <TextView
            android:id="@+id/tv_employee_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_employee_name"
            app:layout_constraintStart_toStartOf="@+id/tv_employee_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_employee_salary"
            tools:text="Dhaka" />

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>